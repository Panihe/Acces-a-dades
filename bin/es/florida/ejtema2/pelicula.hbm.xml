<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="es.florida.ejtema2">
	<class name="Pelicula" table="pelicules">
		<id name="id" column="Id">
			<generator class="increment" />
		</id>
		<property name="Titol" type="string" column="Titol" />
		<property name="Director" type="string" column="Director" />
		<property name="Puntuacio" type="string" column="Puntuacio" />
		<property name="Genere" type="string" column="Genere" />
	</class>
</hibernate-mapping>